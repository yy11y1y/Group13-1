@page "/record"
@inject NavigationManager NavigationManager


<div class="title-container">
    <h1 class="page-title">化療預約系統</h1>
</div>

<div class="menu-container">
    <div class="menu-option">填寫資料</div>
    <div class="menu-option selected">選擇化療時段</div>
    <div class="menu-option selected">預約完成</div>
</div>

<br />

<div class="i-con" style="text-align: center;">
    <p class="information">基本資料</p>
</div>

<div class="container" style="text-align: center;">
    <table>
        <!-- 第一行 -->
        <tr>
            <th>
                <div class="grid-item">
                    <input type="date" class="dir" @bind="inputDateTime" />
                </div>
            </th>
            <th>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="床位" @bind="inputValues[1]" />
                </div>
            </th>
            <th>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="申請人姓名" @bind="inputValues[2]" />
                </div>
            </th>
        </tr>

        <!-- 第二行 -->
        <tr>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="身分證字號" @bind="inputValues[3]" />
                </div>
            </td>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="性別" @bind="inputValues[4]" />
                </div>
            </td>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="病歷號" @bind="inputValues[5]" />
                </div>
            </td>
        </tr>

        <!-- 第三行 -->
        <tr>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="預約床段" @bind="inputValues[6]" />
                </div>
            </td>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="生日" @bind="inputValues[7]" />
                </div>
            </td>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="手機號碼" @bind="inputValues[8]" />
                </div>
            </td>
        </tr>
    </table>
</div>

<div class="bottom-buttons">
    <button class="button3">回首頁</button>
    <button class="button2" @onclick="NavigateToNextPage">下一步</button>
</div>

<br />
<br />

@code {
    private string[] inputValues = new string[9];
    private string[] physiologicalData = new string[8];
    private DateTime inputDateTime;


    private void NavigateToNextPage()
    {
        NavigationManager.NavigateTo("/reservation");
    }
}


