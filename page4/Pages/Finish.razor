@page "/finish"
@inject NavigationManager NavigationManager


<div class="title-container">
    <h1 class="page-title">化療預約系統</h1>
</div>

<div class="menu-container">
    <div class="menu-option selected">填寫資料</div>
    <div class="menu-option selected">選擇化療時段</div>
    <div class="menu-option">預約完成</div>
</div>


<br />
<br />

<center><p>預約成功！</p></center>
<center>
    <p>
        請於預約日期前一天填寫
        <a href="/formempty" style="color: blue; text-decoration: underline;">入院評估表單</a>
    </p>
</center>
<br />
<div class="mt-3 text-center">
    <button class="button4" @onclick="NavigateToLoginPage">回首頁</button>
    <button class="button4" @onclick="NavigateToHome">登出</button>
</div>

<br />
<br />
@code {
    private void NavigateToLoginPage()
    {
        NavigationManager.NavigateTo("/home");
    }
    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }
}

