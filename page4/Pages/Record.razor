@page "/record"
@inject NavigationManager NavigationManager


<div class="title-container">
    <h1 class="page-title">化療預約系統</h1>
</div>

<div class="menu-container">
    <button class="menu-button selected">選擇化療時段</button>
    <button class="menu-button">填寫資料</button>
    <button class="menu-button selected">預約完成</button>
</div>

<br />

<div class="i-con">
    <p class="information">基本資料</p>
</div>

<div class="container">
    <table>
        <!-- 第一行 -->
        <tr>
            <th>
                <div class="grid-item">
                    <input type="date" class="dir" @bind="inputDateTime" />
                </div>
            </th>
            <th>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="床位" @bind="inputValues[1]" />
                </div>
            </th>
            <th>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="申請人姓名" @bind="inputValues[2]" />
                </div>
            </th>
        </tr>

        <!-- 第二行 -->
        <tr>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="身分證字號" @bind="inputValues[3]" />
                </div>
            </td>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="性別" @bind="inputValues[4]" />
                </div>
            </td>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="病歷號" @bind="inputValues[5]" />
                </div>
            </td>
        </tr>

        <!-- 第三行 -->
        <tr>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="預約床段" @bind="inputValues[6]" />
                </div>
            </td>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="生日" @bind="inputValues[7]" />
                </div>
            </td>
            <td>
                <div class="grid-item">
                    <input type="text" class="dir" placeholder="手機號碼" @bind="inputValues[8]" />
                </div>
            </td>
        </tr>
    </table>
</div>


<div class="r-con">
    <p class="record">生理數據</p>
</div>

<div class="container-2">
    <div class="grid-2">
        <!-- 第一行 -->
        <div class="grid-item-long">
            <input type="text" placeholder="病名" @bind="physiologicalData[0]" />
        </div>

        <!-- 第二行 -->
        <div class="grid-item-long">
            <input type="text" placeholder="身高" @bind="physiologicalData[1]" />
        </div>

        <!-- 第三行 -->
        <div class="grid-item-long">
            <input type="text" placeholder="體重" @bind="physiologicalData[2]" />
        </div>

        <!-- 第四行 -->
        <div class="grid-item-long">
            <input type="text" placeholder="BMI" @bind="physiologicalData[3]" />
        </div>

        <!-- 第五行 -->
        <div class="grid-item-long">
            <input type="text" placeholder="血壓" @bind="physiologicalData[4]" />
        </div>

        <!-- 第六行 -->
        <div class="grid-item-long">
            <input type="text" placeholder="脈搏" @bind="physiologicalData[5]" />
        </div>

        <!-- 第七行 -->
        <div class="grid-item-long">
            <input type="text" placeholder="體溫" @bind="physiologicalData[6]" />
        </div>

        <!-- 第八行 -->
        <div class="grid-item-long">
            <input type="text" placeholder="用藥" @bind="physiologicalData[7]" />
        </div>
    </div>
</div>

<div class="bottom-buttons">
    <button class="button1">上一步</button>
    <button class="button2" @onclick="NavigateToNextPage">確認</button>
    <button class="button3">回首頁</button>

</div>

<br />
<br />

@code {
    private string[] inputValues = new string[9];
    private string[] physiologicalData = new string[8];
    private DateTime inputDateTime;


    private void NavigateToNextPage()
    {
        NavigationManager.NavigateTo("/finish");
    }
}


